<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoCollectionView.Views.ListaProductosPage"
             xmlns:models="clr-namespace:DemoCollectionView.Models"
             Title="ListaProductos">
    <VerticalStackLayout>

        <CollectionView ItemsSource="{Binding ProductosLista}" SelectedItem="{Binding productoSeleccionado}" SelectionMode="Single">
            
            <CollectionView.ItemTemplate >
                <DataTemplate>
                    <Grid RowDefinitions="*,*" ColumnDefinitions="Auto, .2*, .1*">
                        <Image Source="{Binding Imagen}" Grid.Column="0" Grid.RowSpan="2" Aspect="AspectFill"/>
                        <Label Text="{Binding Nombre}" Grid.Column="1" Grid.Row="0" FontSize="20" />
                        <Label Text="{Binding Precio}" Grid.Column="1" Grid.Row="0" FontSize="14" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>


            
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>